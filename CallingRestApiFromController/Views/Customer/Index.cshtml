@model List<CallingRestApiFromController.Models.Customer>
@{
    ViewBag.Title = "Index";
}
<h2>Show All Customers </h2>
@if (@ViewBag.msg != null)
{
    <h3>@ViewBag.msg</h3>
}
<table class="table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer Name</th>
            <th>Customer Father Name</th>
            <th>Customer Mother Name</th>
            <th>Contact No</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var customer in Model)
            {
            <tr>
                <td>@customer.id</td>
                <td>@customer.name</td>
                <td>@customer.fathername</td>
                <td>@customer.mothername</td>
                <td>@customer.phone</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = customer.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = customer.id })
                </td>
            </tr>
        }
        <tr>
            <td>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </td>
        </tr>
    </tbody>
</table>

